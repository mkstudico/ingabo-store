    <script>
        // ==================== API CONFIGURATION ====================
        const REMOVEBG_API_KEY = 'rFhiKBRH3jdHqVz8h9njaNZv';
        const REMOVEBG_API_URL = 'https://api.remove.bg/v1.0/removebg';
        
        // ==================== NOTIFICATION SYSTEM ====================
        class NotificationSystem {
            constructor() {
                this.container = document.getElementById('notificationContainer');
                this.notifications = [];
            }
            
            show(type, message, duration = 3000) {
                const id = Date.now().toString();
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.id = `notification-${id}`;
                
                let icon = '';
                switch(type) {
                    case 'success':
                        icon = '<i class="bx bx-check-circle notification-icon"></i>';
                        break;
                    case 'error':
                        icon = '<i class="bx bx-error-circle notification-icon"></i>';
                        break;
                    case 'loading':
                        icon = '<div class="loading-spinner" style="width: 20px; height: 20px; border-width: 2px;"></div>';
                        break;
                }
                
                notification.innerHTML = `
                    ${icon}
                    <div class="notification-text">${message}</div>
                    <button class="notification-close" onclick="notificationSystem.remove('${id}')">
                        <i class='bx bx-x'></i>
                    </button>
                `;
                
                this.container.appendChild(notification);
                this.notifications.push(id);
                
                if (type !== 'loading' && duration > 0) {
                    setTimeout(() => this.remove(id), duration);
                }
                
                return id;
            }
            
            remove(id) {
                const notification = document.getElementById(`notification-${id}`);
                if (notification) {
                    notification.style.animation = 'slideDown 0.3s ease reverse';
                    setTimeout(() => {
                        if (notification.parentNode) {
                            notification.parentNode.removeChild(notification);
                        }
                        const index = this.notifications.indexOf(id);
                        if (index > -1) this.notifications.splice(index, 1);
                    }, 300);
                }
            }
        }
        
        const notificationSystem = new NotificationSystem();
        
        // ==================== LOADING SYSTEM ====================
        class LoadingSystem {
            constructor() {
                this.overlay = document.getElementById('loadingOverlay');
                this.text = document.getElementById('loadingText');
                this.progressFill = document.getElementById('progressFill');
            }
            
            show(message = 'Processing...', progress = 0) {
                this.text.textContent = message;
                this.progressFill.style.width = `${progress}%`;
                this.overlay.classList.add('active');
            }
            
            updateProgress(progress, message = null) {
                this.progressFill.style.width = `${progress}%`;
                if (message) {
                    this.text.textContent = message;
                }
            }
            
            hide() {
                this.overlay.classList.remove('active');
                setTimeout(() => {
                    this.progressFill.style.width = '0%';
                }, 300);
            }
        }
        
        const loadingSystem = new LoadingSystem();
        
        // ==================== STATE MANAGEMENT ====================
        let currentFile = null;
        let processedBlob = null;
        let originalImageUrl = null;
        
        // ==================== INITIALIZATION ====================
        document.addEventListener('DOMContentLoaded', function() {
            setupEventListeners();
        });
        
        // ==================== EVENT LISTENERS ====================
        function setupEventListeners() {
            // Upload button
            document.getElementById('uploadBtn').addEventListener('click', () => {
                document.getElementById('fileInput').click();
            });
            
            // File input change
            document.getElementById('fileInput').addEventListener('change', handleFileSelect);
            
            // Process button
            document.getElementById('processBtn').addEventListener('click', processImage);
            
            // Download button
            document.getElementById('downloadBtn').addEventListener('click', downloadImage);
            
            // Reset button
            document.getElementById('resetBtn').addEventListener('click', resetApp);
            
            // Drag and drop
            const uploadBox = document.getElementById('uploadBox');
            
            uploadBox.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadBox.classList.add('drag-over');
            });
            
            uploadBox.addEventListener('dragleave', () => {
                uploadBox.classList.remove('drag-over');
            });
            
            uploadBox.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadBox.classList.remove('drag-over');
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileSelect({ target: { files } });
                }
            });
        }
        
        // ==================== FILE HANDLING ====================
        function handleFileSelect(event) {
            const file = event.target.files[0];
            
            if (!file) return;
            
            // Validate file
            if (!file.type.startsWith('image/')) {
                notificationSystem.show('error', 'Please select an image file (JPG or PNG)');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) { // 5MB limit
                notificationSystem.show('error', 'File size must be less than 5MB');
                return;
            }
            
            currentFile = file;
            
            // Create preview URL
            if (originalImageUrl) {
                URL.revokeObjectURL(originalImageUrl);
            }
            originalImageUrl = URL.createObjectURL(file);
            
            // Show preview
            document.getElementById('originalPreview').src = originalImageUrl;
            document.getElementById('processedPreview').src = '';
            
            // Switch to preview section
            document.getElementById('uploadSection').style.display = 'none';
            document.getElementById('previewSection').classList.add('active');
            
            // Enable process button
            document.getElementById('processBtn').disabled = false;
            
            // Auto-process after upload
            setTimeout(() => processImage(), 500);
        }
        
        // ==================== IMAGE PROCESSING ====================
        async function processImage() {
            if (!currentFile) return;
            
            const notificationId = notificationSystem.show('loading', 'Removing background...', 0);
            loadingSystem.show('Uploading image...', 10);
            
            try {
                // Prepare form data for remove.bg API[citation:1]
                const formData = new FormData();
                formData.append('image_file', currentFile);
                formData.append('size', 'auto'); // Let API determine optimal size[citation:1]
                
                loadingSystem.updateProgress(30, 'Processing with AI...');
                
                // Make API request to remove.bg[citation:1]
                const response = await fetch(REMOVEBG_API_URL, {
                    method: 'POST',
                    headers: {
                        'X-Api-Key': REMOVEBG_API_KEY
                    },
                    body: formData
                });
                
                loadingSystem.updateProgress(70, 'Finalizing result...');
                
                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`API Error: ${response.status} - ${errorText}`);
                }
                
                // Get processed image blob
                processedBlob = await response.blob();
                
                // Create object URL for preview
                const processedUrl = URL.createObjectURL(processedBlob);
                document.getElementById('processedPreview').src = processedUrl;
                
                // Update UI
                loadingSystem.updateProgress(100, 'Complete!');
                
                notificationSystem.remove(notificationId);
                notificationSystem.show('success', 'Background removed successfully!', 3000);
                
                // Enable download button
                document.getElementById('downloadBtn').disabled = false;
                
            } catch (error) {
                console.error('Processing error:', error);
                
                notificationSystem.remove(notificationId);
                
                // Handle specific API errors
                if (error.message.includes('429')) {
                    notificationSystem.show('error', 'API rate limit exceeded. Please try again later.', 5000);
                } else if (error.message.includes('400')) {
                    notificationSystem.show('error', 'Invalid image format. Please try another image.', 4000);
                } else if (error.message.includes('402')) {
                    notificationSystem.show('error', 'API quota exceeded. Please check your API key.', 5000);
                } else {
                    notificationSystem.show('error', `Failed to remove background: ${error.message}`, 4000);
                }
                
                // Show fallback option
                showFallbackOption();
                
            } finally {
                setTimeout(() => loadingSystem.hide(), 1000);
            }
        }
        
        // ==================== DOWNLOAD FUNCTION ====================
        function downloadImage() {
            if (!processedBlob) return;
            
            // Create download link
            const url = URL.createObjectURL(processedBlob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `background-removed-${Date.now()}.png`;
            
            // Trigger download
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            // Clean up
            URL.revokeObjectURL(url);
            
            notificationSystem.show('success', 'Image downloaded successfully!', 3000);
        }
        
        // ==================== RESET FUNCTION ====================
        function resetApp() {
            // Clean up URLs
            if (originalImageUrl) {
                URL.revokeObjectURL(originalImageUrl);
                originalImageUrl = null;
            }
            
            // Reset state
            currentFile = null;
            processedBlob = null;
            
            // Reset file input
            document.getElementById('fileInput').value = '';
            
            // Reset previews
            document.getElementById('originalPreview').src = '';
            document.getElementById('processedPreview').src = '';
            
            // Switch back to upload section
            document.getElementById('previewSection').classList.remove('active');
            document.getElementById('uploadSection').style.display = 'block';
            
            // Reset buttons
            document.getElementById('processBtn').disabled = true;
            document.getElementById('downloadBtn').disabled = true;
            
            notificationSystem.show('success', 'Ready for new image upload', 2000);
        }
        
        // ==================== FALLBACK OPTION ====================
        function showFallbackOption() {
            notificationSystem.show('error', 'Using browser-based fallback...', 3000);
            
            // This is where you could implement a browser-based fallback
            // using a library like @imgly/background-removal[citation:6]
            // For now, we'll just show a message
            setTimeout(() => {
                notificationSystem.show('info', 'For production use, consider implementing a browser-based fallback solution[citation:6]', 5000);
            }, 2000);
        }
        
        // ==================== ERROR HANDLING ====================
        window.addEventListener('error', function(e) {
            console.error('Global error:', e.error);
            notificationSystem.show('error', 'An unexpected error occurred. Please try again.', 4000);
        });
        
        // Clean up on page unload
        window.addEventListener('beforeunload', function() {
            if (originalImageUrl) {
                URL.revokeObjectURL(originalImageUrl);
            }
        });
    </script>
</body>
</html>
